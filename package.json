{
    "name": "login",
    "version": "0.0.7",
    "description": "jillix engine login module",
    "main": "server/login.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/adioo/login.git"
    },
    "bugs": {
        "url": "https://github.com/adioo/login/issues"
    },
    "homepage": "https://github.com/adioo/login",
    "composition": {
        "flow": [
            [
               "loginUser",
               "loginUser"
            ],
            [
               "logoutUser",
               "logoutUser"
            ],
            [
               "signupUser",
               "signupUser"
            ],
            [
               "resetPassword",
               "resetPassword"
            ]
        ],
        "client": {
            "module": [
                "login.js"
            ],
            "config": {},
            "flow": [
                [
                    "loginUser",
                    [":validate", {"email": "string", "pass": "string"}],
                    [">link", "loginUser"],
                    [":session", {"sid": "sid"}],
                    [">emit", "userLoggedIn"]
                ],
                [
                    "logoutUser",
                    [":session", {"remove": true}],
                    [">link", "logoutUser"],
                    [">emit", "userLoggedOut"]
                ],
                [
                    "signupUser",
                    [":validate", {
                        "user": "string",
                        "email": "string",
                        "pass": "string"
                    }],
                    [">link", "signupUser"],
                    [">emit", "userSignedUp"]
                ],
                [
                    "resetPassword",
                    [":validate", {"email": "string"}],
                    [">link", "resetPassword"],
                    [">emit", "passwordReseted"]
                ]
            ]
        }
    }
}
